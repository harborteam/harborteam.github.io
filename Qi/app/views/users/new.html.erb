<!DOCTYPE html>
<html>

<head>
  <title>Register</title>
</head>
<body>
  <div class="stepwizard">
    <div class="stepwizard-row setup-panel">
      <div class="stepwizard-step">
        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
        <p>Create Account</p>
      </div>
    </div>
  </div>

    <div class="row setup-content" id="step-1">
      <div class="col-xs-12">
        <div class="col-md-12">
          <h3> Account Info</h3>
            <fieldset>
              <div id="legend">
                <legend>Register</legend>
              </div>
              <%= form_for(@user, :html => { :class => "form-stacked"}) do |f| %>
                <div class= "col-xs-6">
                  <% if @user.errors.any? %>
                    <ul class="Signup_Errors">
                      <h3> Form is invalid! </h3>
                      <% for message_error in @user.errors.full_messages %>
                        <li>* <%= message_error %></li>
                      <% end %>
                    </ul>
                  <% end %>
                  <p>
                    <%= f.label :email %><br />
                    <%= f.text_field :email %>
                  </p>
                  <p>
                    <%= f.label :password %><br />
                    <%= f.password_field :password %>
                  </p>
                  <p>
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation %>
                  </p>
                  <p>
                    <%= f.label :upload_profile_image %><br />
                    <%= f.file_field :photo %>
                  </p>
                  
                  <%= f.hidden_field :role, :value => @role%>
                </div>
                <div class= "col-xs-6">
                <p>
                  <%= f.label :username %><br />
                  <%= f.text_field :username %>
                </p>

                <p>
                  <%= f.label :skypeid %><br />
                  <%= f.text_field :skype %>
                </p>

                <p>
                  <%= f.label :introduction %> <br />
                  <%=f.text_area :description, :size => '115x5' %>
                </p>
                </div>
              
              <div class = "row" align="center">
              <p> <%= f.submit "Create",:class => "btn btn-primary" %></p>
              <p><%= link_to "Go Back", root_url %></p>
              </div>
              <% end %>
        </div>
      </div>
    </div>
</body>



             